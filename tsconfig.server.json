{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build/server",
    "rootDir": "./server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "allowImportingTsExtensions": false,
    "noEmit": false, //  Enable code generation
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["server"]
}
